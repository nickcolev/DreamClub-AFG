<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">

		<TextView android:text="Frequency" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <EditText android:id="@+id/freq" style="@style/inputFreq" />
		<TextView android:text="Tag" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <EditText
			android:id="@+id/tag"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:selectAllOnFocus="true" />
		<TextView android:text="" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

</LinearLayout>

